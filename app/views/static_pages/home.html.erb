<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="stats">
        <%= render 'shared/stats' %>
      </section>
      <section class="comment_form">
        <%= render 'shared/comment_form' %>
      </section>
      Dashboard Links:<br>
      <%= link_to "Articles", articles_path %>
    </aside>
    <div class="col-md-8">
      <h3>User Comments</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>

    <!-- BEGIN JUMBOTRON -->
    <section id="demo-hero-4" class="jumbotron relative full-vh" data-pages-bg-image="/assets/banner.jpg">
      <div class="container-xs-height full-height">
        <div class="col-xs-height col-middle">
          <!-- BEGIN CONTENT -->
          <div class="content-layer">
            <div class="inner full-height">
              <div class="container-xs-height full-height">
                <div class="col-xs-height col-middle text-center">
                  <h1 class="hidden-xs">Life is a story. Make yours last.</h1>
                  <h2 class="visible-xs">Life is a story. Make yours last.</h2>
                </div>
              </div>
            </div>
          </div>
          <!-- END CONTENT -->
        </div>
      </div>
    </section>
    <!-- END JUMBOTRON -->
    <!-- BEGIN INTRO CONTENT -->
    <section class="container-fluid b-t b-white">
      <div class="row">
        <div class="col-md-4 text-center bg-success hover-push demo-story-block">
          <div class="hover-backdrop" style="background:url('/assets/feature_1.jpg')"></div>
          <div class="hover-caption bottom-left bottom-right p-b-40">
            <h4 class="text-white m-b-25">Featured Product</h4>
            <a class="font-montserrat fs-12 hint-text text-white all-caps">More information</a>
          </div>
        </div>
        <div class="col-md-4 text-center bg-success hover-push demo-story-block">
          <div class="hover-backdrop" style="background:url('/assets/feature_2.jpg')"></div>
          <div class="hover-caption bottom-left bottom-right p-b-40">
            <h4 class="text-white m-b-25">Featured Service</h4>
            <a class="font-montserrat fs-12 hint-text text-white all-caps">More information</a>
          </div>
        </div>
        <div class="col-md-4 text-center bg-success hover-push demo-story-block">
          <div class="hover-backdrop" style="background:url('/assets/feature_3.jpg')"></div>
          <div class="hover-caption bottom-left bottom-right p-b-40">
            <h4 class="text-white m-b-25">Digital solutions</h4>
            <a class="font-montserrat fs-12 hint-text text-white all-caps">More information</a>
          </div>
        </div>
      </div>
    </section>
    <!-- END INTRO CONTENT -->
    <!-- BEGIN CONTENT SECTION -->
    <section class="p-t-90 p-b-90 bg-master-darkest demo-story-block xs-p-t-20 xs-p-b-20">
      <div class="container text-center sm-p-t-20">
        <h3 class="text-white m-b-0 m-t-5">Sign up for our newsletter</h3>
        <p class="font-arial fs-12 hint-text text-white m-t-5">We <strong>value your privacy</strong>. None of the details supplied will be shared with external parties</p>
        <button class="btn btn-white m-t-20">Sign up now</button>
      </div>
    </section>
    <!-- END CONTENT SECTION -->
<% end %>
